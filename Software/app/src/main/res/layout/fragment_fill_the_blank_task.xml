<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.tasks.FillTheBlankTaskFragment"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/fragment_fill_the_blank_task_TV_Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in the blank:"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/fragment_fill_the_blank_task_ET_UserAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/fragment_fill_the_blank_task_BTN_Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_gravity="center"
            android:layout_marginTop="24dp" />
</LinearLayout>
